  "scripts": {
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "build": "concurrently -c \"bgYellow.bold,magenta.bold,cyan.bold,blue.bold,green.bold,yellow.bold,red.bold,gray.bold\" pnpm:build:*",
    "build:api": "nest build api",
    "build:build-systems": "nest build build-systems",
    "build:clients": "nest build clients",
    "build:comms": "nest build comms",
    "build:issues": "nest build issues",
    "build:payments": "nest build payments",
    "build:releases": "nest build releases",
    "build:source-control": "nest build source-control",
    "start:dev": "concurrently -c \"bgYellow.bold,magenta.bold,cyan.bold,blue.bold,green.bold,yellow.bold,red.bold,gray.bold\" pnpm:start:dev:*",
    "start:dev:api": "nest start --watch api",
    "start:dev:build-systems": "nest start --watch build-systems",
    "start:dev:clients": "nest start --watch clients",
    "start:dev:comms": "nest start --watch comms",
    "start:dev:issues": "nest start --watch issues",
    "start:dev:payments": "nest start --watch payments",
    "start:dev:releases": "nest start --watch releases",
    "start:dev:source-control": "nest start --watch source-control",
    "start:debug": "concurrently -c \"bgYellow.bold,magenta.bold,cyan.bold,blue.bold,green.bold,yellow.bold,red.bold,gray.bold\" pnpm:start:debug:*",
    "start:debug:api": "nest start --debug --watch api",
    "start:debug:build-systems": "nest start --debug --watch build-systems",
    "start:debug:clients": "nest start --debug --watch clients",
    "start:debug:comms": "nest start --debug --watch comms",
    "start:debug:issues": "nest start --debug --watch issues",
    "start:debug:payments": "nest start --debug --watch payments",
    "start:debug:releases": "nest start --debug --watch releases",
    "start:debug:source-control": "nest start --debug --watch source-control",
    "start:prod:api": "node dist/apps/api/main",
    "start:prod:build-systems": "node dist/apps/build-systems/main",
    "start:prod:clients": "node dist/apps/clients/main",
    "start:prod:comms": "node dist/apps/comms/main",
    "start:prod:issues": "node dist/apps/issues/main",
    "start:prod:payments": "node dist/apps/payments/main",
    "start:prod:releases": "node dist/apps/releases/main",
    "start:prod:source-control": "node dist/apps/source-control/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api/test/jest-e2e.json"
  },
