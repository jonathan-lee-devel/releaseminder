  "devDependencies": {
    "@automock/adapters.nestjs": "^2.1.0",
    "@automock/jest": "^2.1.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/express-serve-static-core": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-strategy": "^0.2.38",
    "@types/pg": "^8.11.10",
    "@types/qs": "^6.9.16",
    "@types/stripe": "^8.0.417",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "concurrently": "^9.0.1",
    "drizzle-kit": "^0.24.2",
    "eslint": "^8.42.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.20.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/auth/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
      "^@app/mail/mail(|/.*)$": "<rootDir>/libs/mail/src/$1",
      "^@app/db/db(|/.*)$": "<rootDir>/libs/db/src/$1",
      "^@app/supabase/supabase(|/.*)$": "<rootDir>/libs/supabase/src/$1",
      "^@app/util/util(|/.*)$": "<rootDir>/libs/util/src/$1",
      "^@app/validation/validation(|/.*)$": "<rootDir>/libs/validation/src/$1",
      "^@app/micro/micro(|/.*)$": "<rootDir>/libs/micro/src/$1"
    }
